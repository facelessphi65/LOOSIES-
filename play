<body>
  <div class="container">
    <h1>LOOSIES! üíÄ</h1>

    <audio id="player" controls>
      <source id="trackSource" src="" type="audio/wav" />
      Your browser does not support the audio element.
    </audio>

    <div class="controls">
      <button onclick="prevTrack()">‚èÆÔ∏è Prev</button>
      <button onclick="nextTrack()">Next ‚è≠Ô∏è</button>
    </div>
  </div>

  <script>
    const tracks = [
      { src: "music/track1.wav", title: "PRUDENTIAL!" },
      { src: "music/track2.wav", title: "DUMBO!" },
      { src: "music/track3.wav", title: "ANTIDEPRESSANTS!" },
      { src: "music/track4.wav", title: "iNFORMANT! interlude" },
      { src: "music/track5.wav", title: "nao falar!" }
    ];

    let currentTrack = -1; 
    const player = document.getElementById("player");
    const source = document.getElementById("trackSource");

    function loadTrack(index) {
      if (index < 0) index = tracks.length - 1;
      if (index >= tracks.length) index = 0;
      currentTrack = index;
      source.src = tracks[currentTrack].src;
      player.load();
      player.play();
    }

    function prevTrack() {
      if (currentTrack === -1) loadTrack(0);
      else loadTrack(currentTrack - 1);
    }

    function nextTrack() {
      if (currentTrack === -1) loadTrack(0);
      else loadTrack(currentTrack + 1);
    }

    player.addEventListener('ended', () => {
      nextTrack();
    });
  </script>
